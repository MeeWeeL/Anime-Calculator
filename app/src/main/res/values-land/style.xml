<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MaterialComponents.DayNight.NoActionBar.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="numButtons">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:backgroundTint">@color/soft_nums</item>
        <item name="android:onClick">btn</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="android:textColor">@color/soft_text</item>
    </style>
    <style name="moveButtons">
